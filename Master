#include <stdio.h>

void main()
{

float principle_amount, rate, time, simple_interest;

printf("Enter Principle Amount\n");

scanf("%f", &principle_amount);

printf("Enter Rate\n");

scanf("%f", &rate);

printf("Enter Time\n");

scanf("%f", &time);

simple_interest = principle_amount * rate * time * 0.01 ; 

printf("The Simple Interest is %f %% ", simple_interest);
 

}
