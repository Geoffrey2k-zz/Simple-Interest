#include <stdio.h>

int main()
{

float principal_amount, rate, time, simple_interest;

printf("Enter Principal Amount\n");

scanf("%f", &principal_amount);

printf("Enter Rate\n");

scanf("%f", &rate);

printf("Enter Time\n");

scanf("%f", &time);

simple_interest = principal_amount * rate * time * 0.01 ; 

printf("The Simple Interest is %f %% ", simple_interest);
 
return 0;

}
